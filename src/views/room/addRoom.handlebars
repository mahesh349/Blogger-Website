
 <main>
    <h1>Add Room</h1>
    <p>We can add the room for the guests</p>
    <form action="/addRoom" method="post">
    <label for="roomNumber">Room Number:</label>
    <input type="number" id ="roomNumber" name ="roomNumber" required>
    <label for="roomType"> Room Type:</label>
    <select id="roomType" name ="roomType" required>
        <option value="single">Single</option>
        <option value="double">Double</option>
    </select>
    <label for="roomPrice">Room Price:</label>
    <input type="text" id ="roomPrice" name ="roomPrice" required>

    <label for="availability">Availability:</label>
    <input type="checkbox" id ="availability" name ="availability">

     <label for="roomPhotos">Room Photos:</label>
    <input type="url" id ="roomPhotos" name ="roomPhotos" placeholder="http://example.com/photos/room.jpg">
    <button type="button" onclick="addPhotoField()">Add Another Photo</button>

    <input type"submit" value="Add Room">    
    </form>
    {{!--The below script content can be moved later--}}
    <script>
        function addPhotoField(){
            const photoContainer = document.createElement('div');
            const input = document.createElement('input');
            input.type= 'url';
            input.name ='roomPhotos';
            input.placeholder = 'http://example.com/photos/room.jpg';
            photoContainer.appendChild(input);
            const form = document.querySelector('form');
            form.insertBefore(photoContainer, this);
        }
    </script>
 </main>