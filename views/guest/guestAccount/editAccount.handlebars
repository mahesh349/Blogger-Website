<form action ="/guest/account/edit/{{account._id}}"method="POST">
{{#if successMessage}}<div class="alert alert-success" role="alert">{{successMessage}}</div>{{/if}}
{{#if error}}<div class="alert alert-danger">{{error}}</div>{{/if}}
  <h1>In Edit Account details for guest</h1>
  <label for="firstNameInput">First Name:</label>
  <input type="text" name="firstNameInput" id ="firstNameInput" placeholder="enter your name" value="{{account.firstName}}"/>
  <label for="lastNameInput">Last Name:</label>
  <input type="text" name="lastNameInput" id ="lastNameInput" placeholder="Enter your LastName" value="{{account.lastName}}"/>
  <label for="phone" >Phone</label>
  <div class="phone-container">
    <input type="text"  id="phonePrefix" name ="phonePrefix"  value="+1" disabled/>
    <input type="tel" id="phone" name ="phone"  placeholder="Enter your Phone Number" value="{{account.phoneNumber}}" />
  </div>
  <label for="email">Email</label>
  <input type="text" id="email" name ="email"placeholder="Please enter an email"value="{{account.email}}"/>
  <button type="submit">Update Account</button>
</form>

<footer>

  <a href="/guest">back to guest Homepage</a>
</footer>