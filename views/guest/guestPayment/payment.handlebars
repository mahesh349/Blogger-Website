<main>
  <p>Your are in payment</p>
  <form id="paymentForm">
      <div class="form-group">
          <label for="cardNumber">Card Number</label>
          <input type="text" id="cardNumber" name="cardNumber" placeholder="1234 1234 1234 1234" required>
      </div>

      <div class="form-group">
          <label for="cardName">Name on Card</label>
          <input type="text" id="cardName" name="cardName" placeholder="Name on the card" required>
      </div>

      <div class="form-row">
          <div class="form-group col-md-6">
              <label for="expiryMonth">Expiry Month</label>
              <input type="text" id="expiryMonth" name="expiryMonth" placeholder="MM" pattern="\d{2}" required>
          </div>
          <div class="form-group col-md-6">
              <label for="expiryYear">Expiry Year</label>
              <input type="text" id="expiryYear" name="expiryYear" placeholder="YYYY" pattern="\d{4}" required>
          </div>
      </div>

      <div class="form-group">
          <label for="cvv">CVV</label>
          <input type="text" id="cvv" name="cvv" placeholder="123" pattern="\d{3}" required>
      </div>

      <button type="submit" class="btn btn-primary">Submit Payment</button>
  </form>

</main>
