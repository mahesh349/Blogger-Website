<form>

  <p>Bill</p>
  <hr />
  {{! show roomNumber,roomPrice,totalPrice,finalPrice }}
  <ul>
    <li>Room Price: {{bookingDetails.roomPrice}}</li>
    <li>Number Of Days: {{bookingDetails.numberOfDays}}</li>
    <li>Total stay Price: {{bookingDetails.totalPrice}}</li>
    <li>Tax (20%) : {{bookingDetails.taxPrice}}</li>
    <li>Service Fee (10%): {{bookingDetails.serviceFee}}</li>
    <li>Final Price: {{bookingDetails.finalPrice}}</li>
  </ul>
</form>

<form action="/guest/booking/payment" id="paymentForm" method="POST">
  <div class="form-group">
    <label for="cardNumber">Card Number</label>
    <input
      type="text"
      id="cardNumber"
      name="cardNumber"
      placeholder="1234 1234 1234 1234"
      required
    />
  </div>

  <div class="form-group">
    <label for="cardName">Name on Card</label>
    <input
      type="text"
      id="cardName"
      name="cardName"
      placeholder="FirstName LastName"
      required
    />
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="expiryMonth">Expiry Month</label>
      <input
        type="text"
        id="expiryMonth"
        name="expiryMonth"
        placeholder="MM"
        pattern="\d{2}"
        required
      />
    </div>
    <div class="form-group col-md-6">
      <label for="expiryYear">Expiry Year</label>
      <input
        type="text"
        id="expiryYear"
        name="expiryYear"
        placeholder="YYYY"
        pattern="\d{4}"
        required
      />
    </div>
  </div>

  <div class="form-group">
    <label for="cvv">CVV</label>
    <input
      type="text"
      id="cvv"
      name="cvv"
      placeholder="123"
      pattern="\d{3}"
      required
    />
  </div>

  {{#if paymentSuccess}}
    <button type="submit" class="btn btn-primary" disabled>
      Payment processed
    </button>
    <button type="button" id="downloadReport" onclick="nowdownloadReport()">
      Download Report</button>
  {{else}}
    <button type="submit" class="btn btn-primary">Submit Payment</button>
    <button type="button" id="downloadReport" disabled> Download Report</button>
  {{/if}}
</form>

<footer>
  <a href="/guest">back to guest Homepage</a>
</footer>

<script src="/public/js/client_side_validation.js"></script>
<script>
  function nowdownloadReport(){ window.location.href = '/guest/booking/report';
  }
</script>