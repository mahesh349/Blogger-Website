
{{#if message}}
    <div class="alert">
        {{message}}
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    </div>
{{/if}}

<div style="margin-bottom: 1rem;">

</div>

<p class="home-para">If you would like to book one of our rooms, Please Login ^_^</p>
{{#each rooms}}
    <div class="feedback-card">
        <h2>Room {{this.roomNumber}}</h2>
        <p>Type: {{this.roomType}}</p>
        <p>Price: ${{this.roomPrice}}</p>
        <p>Availability: {{#if this.availability}}Available{{else}}Not Available{{/if}}</p>
        <p>Description: {{this.roomDescription}}</p>
        {{#if this.roomPhotos}}
            <div>
                {{#each this.roomPhotos}}
                    <img src="{{this}}" alt="Room Photo" class="room-photo">
                {{/each}}
            </div>
        {{/if}}
<!--        <p>cleanStatus: {{#if this.cleanStatus}}Clean{{else}}Dirty{{/if}}</p>-->
        
    </div>
{{/each}}
<div class="space-below">

</div>
<footer>

    <a href="/">back to Home</a>
</footer>