{{#if message}}
    <div class="alert">
        {{message}}
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    </div>
{{/if}}

{{#each rooms}}
    <div class="room-card">
        <h2>Room {{this.roomNumber}}</h2>
        <p>Type: {{this.roomType}}</p>
        <p>Price: ${{this.roomPrice}}</p>
        <p>Availability: {{#if this.availability}}Available{{else}}Not Available{{/if}}</p>
        <p>Description: {{this.roomDescription}}</p>
        {{#if this.roomPhotos}}
            <div>
                {{#each this.roomPhotos}}
                    <img src="{{this}}" alt="Room Photo" class="room-photo">
                {{/each}}
            </div>
        {{/if}}
        <p>cleanStatus: {{#if this.cleanStatus}}Clean{{else}}Dirty{{/if}}</p>
        <a href="/staff/markDirtyRoom/clean/{{this.roomNumber}}" class="clean-button">Clean</a>
        <a href="/staff/markDirtyRoom/dirty/{{this.roomNumber}}" class="dirty-button">Dirty</a>
    </div>
{{/each}}
<div class="space-below">

</div>

<footer>
    <a href="/staff">back to Staff Dashboard</a>
</footer>