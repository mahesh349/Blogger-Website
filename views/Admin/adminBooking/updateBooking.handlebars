<main>
  <h1>Update Booking</h1>
  <p>Please update your booking details:</p>
  <form action="/admin/booking/update" method="POST" id="BookingForm">
    <h2>Guest Details</h2>

    <label for="bookingId"></label>
    <input id="bookingId" name="bookingId" value="{{booking._id}}" type="hidden">

    <label for="FirstNameInput">Enter First Name</label>
    <input type="text" id="FirstNameInput" name="FirstNameInput" value="{{booking.firstName}}"/>
    <br />
    <label for="LastNameInput">Enter Last Name</label>
    <input type="text" id="LastNameInput" name="LastNameInput" value='{{booking.lastName}}'/>
    <br />
    <label for="EmailIdInput">Enter Email Address</label>
    <input type="email" id="EmailIdInput" name="EmailIdInput" value="{{booking.emailId}}"/>
    <br />
    <label for="ContactNumberInput">Enter Contact Number:</label>
    <input type="text" name="ContactNumberInput" id="ContactNumberInput" value="{{booking.contactNumber}}"/>
    <br />
    <label for="CheckinDateInput">Enter CheckIn Date</label>
    <input type="date" id="CheckinDateInput" name="CheckinDateInput" value="{{booking.CheckinDate}}" min=""/>
    <br />
    <label for="CheckoutDateInput">Enter CheckOut Date</label>
    <input type="date" id="CheckoutDateInput" name="CheckoutDateInput" value="{{booking.CheckOutDate}}" min=""/>
    <br />
    <button type="submit">Proced For Payment</button>
  </form>
  <div id="error-container" style="display: none;">{{#if
    error
    }}{{error}}{{/if}}</div>
</main>

<script>
  const today = new Date();
  const yesterday = new Date(today);
  yesterday.setDate(today.getDate() - 1);
  const formattedYesterday = yesterday.toISOString().split('T')[0];
  document.getElementById('CheckinDateInput').setAttribute('min', formattedYesterday);
  document.getElementById('CheckoutDateInput').setAttribute('min', formattedYesterday);
</script>

<footer>
  <a href="/guest/room">Back to Guest Rooms</a>
  <br>
  <a href="/guest">Back to Guest Homepage</a>
</footer>

<script src="/public/js/main.js"></script>
<script src="/public/js/client_side_validation.js"></script>