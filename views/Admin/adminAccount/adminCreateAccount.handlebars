<form action="/admin/account/create"method="POST">
{{#if successMessage}}<div id="success-message"  class="alert alert-success" role="alert" style="display: none;">{{successMessage}}</div>{{/if}}
<div id = "error-container" style="display: none;">{{#if error}}{{error}}{{/if}}</div>
  <label for="firstNameInput">First Name :</label>
  <input type ="text" name="firstNameInput" id ="firstNameInput" placeholder="Enter your First Name">
  <label for="lastNameInput">Last Name :</label>
  <input type="text" name="lastNameInput" id ="lastNameInput" placeholder="Enter your LastName">
  <label for="email">Email :</label>
  <input type="email" id="email" name ="email" placeholder="enter your email" />
 <!--  <label for="contactNumber">Contact Number</label>
  <input type="contactNumber" placeholder="enter contact number" />
  <label for="phonePrefix" >Phone Prefix</label>
  <input type="text" id="phonePrefix" name ="phonePrefix"  value="+1" disabled/>!-->
  <label for="phone" >Phone :</label>
  <div class="phone-container">
    <select id="phonePrefix" name ="phonePrefix"></select>
    <input type="tel" id="phone" name ="phone"  placeholder="123-456-7890"  pattern="\d{3}-\d{3}-\d{4}"/>
  </div>
  <label for="roleInput">Role :</label>
   <select name="roleInput" id ="roleInput">
        <option value="user">User</option>
        <option value="admin">Admin</option>
        <option value="staff">Staff</option>
  </select>
  <br> <br>
  <label for="password" >Password :</label>
  <input type="password" id="password" name ="password"  placeholder="Please create a password" />
  <label for="cpassword">Confirm Password :</label>
  <input type="password" id="cpassword" name ="cpassword" placeholder="confirm password" />
  <button type="submit">Create Account</button>
</form>


{{#if role}}
{{#if (eq role "admin")}}
<footer>
  <a href="/admin/account">Back To Admin Account Dashboard</a>
</footer>
{{else}}
<a href="/login">Already have an account? Click here to log-in </a>
<footer>
  <a href="/">Back to home</a>
</footer>
{{/if}}
{{else}}
