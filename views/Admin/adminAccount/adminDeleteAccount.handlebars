<div id="success-message" class="alert-message"style="display: none;">{{successMessage}}</div>
<div id="error-container" class="alert-message" style="display: none;">{{error}}</div>
{{#each details}}
<form class="admin-delete-form" action="/admin/account/delete/{{this._id}}" method="POST">
    <div class="user">
    <input type ="hidden" name="accountId" value ="{{this._id}}">
    <p>
        <label for="firstNameInput">Name:</label>
        <input type ="text" name="firstNameInput" id ="firstNameInput" value="{{this.firstName}}" disabled/>
        <input type ="text" name="lastNameInput" id ="lastNameInput" value="{{this.lastName}}"disabled/>
    </p>
    <p>
        <label for="email">Email</label>
        <input type="email" id="email" name ="email" value="{{this.email}}" disabled/>
    </p>
    <p>
        <label for="phone" >Phone</label>
        <div class="phone-container">
            <input type ="text" id="phonePrefix" name="phonePrefix" value = "{{this.phonePrefix}}" disabled/>
            <input type="tel" id="phone" name ="phone"  value="{{this.phoneNumber}}" disabled/>
        </div>
    </p>
    <p>Role:{{this.role}}</p>
    <!---<a href="/admin/account/edit/{{this._id}}">!--->
    <button type="submit" class="delete-button">
    <i class ="fas fa-pencil-alt"></i>Delete
    </button>
</div>
</form>

{{else}}
<p>No users found.</p>
{{/each}}
<footer>

  <a href="/admin/account">Back To Admin Account Dashboard</a>
</footer>

<script src="/public/js/main.js"></script>