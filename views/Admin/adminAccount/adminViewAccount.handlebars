{{#if successMessage}}<div class="alert alert-success" role="alert">{{successMessage}}</div>{{/if}}
{{#each details}}
<form class="admin-view-form" action="/admin/account/view/{{this._id}}" method="POST">
    <div class="user">
    <input type ="hidden" name="accountId" value ="{{this._id}}">
    <p>
        <label for="firstNameInput">Name:</label>
        <span>{{this.firstName}}</span>
        <span>{{this.lastName}}</span>
    </p>
    <p>
        <label for="email">Email:</label>
         <span>{{this.email}}</span>
    </p>
    <p>
        <label for="phoneNumber" >Phone:</label>
        <span>{{this.phonePrefix}}</span>  - <span>{{this.phoneNumber}}</span>
    </p>
    <p>
         <label for="email">Role:</label>
          <span>{{this.role}}</span></p>
    <!---<a href="/admin/account/edit/{{this._id}}">!--->
</div>
</form>

{{else}}
<p>No users found.</p>
{{/each}}
<footer>

  <a href="/admin/account">Back To Admin Account Dashboard</a>
</footer>